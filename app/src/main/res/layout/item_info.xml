<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".itemView.itemView"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemInfo_img"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/itemInfo_storeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeuljiro_regular"
                android:text="가게이름"
                android:textColor="@color/colorAccent"
                android:textSize="40sp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeuljiro_regular"
                android:text="전화번호 : "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/itemInfo_phoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:fontFamily ="@font/bmeuljiro_regular"
                android:textSize="20sp"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주소 : "
                android:fontFamily ="@font/bmeuljiro_regular" />
            <TextView
                android:id="@+id/itemInfo_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주소"
                android:fontFamily ="@font/bmeuljiro_regular"
                android:textSize="20sp"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_SeatNum"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/bmeuljiro_regular"
            android:text=""
            android:textAlignment="center"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btnSeat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/bmeuljiro_regular"
            android:text="좌석 수"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:fontFamily="@font/bmeuljiro_regular"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="새로고침" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"

                    android:fontFamily="@font/bmeuljiro_regular"
                    android:text="MENU"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="35sp" />

                <ListView
                    android:id="@+id/item_ListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="54dp"
                    android:background="@drawable/back2" />


            </FrameLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnReservation"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:text="예약하기"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/back"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowRadius ="3"
            android:textAlignment="center"
            android:textSize="40sp"
            android:fontFamily ="@font/bmeuljiro_regular"/>
    </FrameLayout>
    <!--FF9ACD32 : YellowGreen-->
    <!---->
</LinearLayout>