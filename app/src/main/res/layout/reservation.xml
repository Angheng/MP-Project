<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context = ".mainActivity.sign_upView.SignUp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TimePicker
                android:id="@+id/timePicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:headerBackground="@color/colorPrimary"
                android:numbersSelectorColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/et_reservation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_black_name"
                android:drawablePadding="5dp"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="예약자 이름"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_reservation_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_people_count"
                android:drawablePadding="5dp"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="예약 인원 "
                android:inputType="number" />

            <EditText
                android:id="@+id/et_reservation_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_black_phone"
                android:drawablePadding="5dp"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="연락처"
                android:inputType="phone" />

            <Button
                android:id="@+id/btn_reservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorPrimary"
                android:text="예약하기"
                android:textColor="#FFF"
                android:textSize="7.5pt" />


        </LinearLayout>



    </ScrollView>


</LinearLayout>